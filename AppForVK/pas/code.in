program VIRUS;
  var arr: array of text;
      a,b: integer;
      name, text: string;
begin
  SetLength(arr,1001); //1001 - это на еденицу больше, чем будет файлов
  for b:=1 to 100 do //Создаст строку в 100 символов, они потом будут в файлах
    text := text+'1'; 
  for a:=1 to 1000 do //1000 - это количетсво файлов
  begin
    name := a+'.hack';
    assign(arr[a],name);
    rewrite(arr[a]);
      write(arr[a],text);
    close(arr[a]);
  end;
end.